                <field id="update_attribute_search_ref_2" type="select" sortOrder="90" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Search Ref 2</label>
                    <source_model>AudereCommerce\AccountsIntegration\Model\Config\Source\Attributes</source_model>
                    <depends>
