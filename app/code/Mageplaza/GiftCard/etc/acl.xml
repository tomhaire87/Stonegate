<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::marketing">
                    <resource id="Mageplaza_GiftCard::giftcard" title="Gift Card" translate="title" sortOrder="53">
                        <resource id="Mageplaza_GiftCard::code" title="Manage Gift Code" translate="title" sortOrder="20"/>
                        <resource id="Mageplaza_GiftCard::template" title="Manage Template" translate="title" sortOrder="30"/>
                        <resource id="Mageplaza_GiftCard::pool" title="Manage Gift Code Pool" translate="title" sortOrder="40"/>
                        <resource id="Mageplaza_GiftCard::history" title="Gift Card History" translate="title" sortOrder="50"/>
                        <resource id="Mageplaza_GiftCard::customer" title="Customer Gift Card Tab" translate="title" sortOrder="100"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Mageplaza_GiftCard::configuration" title="Gift Card"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
