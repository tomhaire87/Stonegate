// @codingStandardsIgnoreFile

/** @var \Mageplaza\GiftCard\Pricing\Render\FinalPriceBox $block */

$minimalPrice = $block->getMinimalPrice();
$maximalPrice = $block->getMaximalPrice();
?>
<?php if ($block->getShowStatic() || $block->isFixedPrice()) : ?>
    <?= /** @noEscape */ $block->renderAmount($minimalPrice, [
        'price_id'          => $block->getPriceId('product-price-'),
        'include_container' => true
    ]) ?>
<?php else : ?>
    <?php if ($minimalPrice !== 0) : ?>
        <p class="price-from">
            <?= /** @noEscape */ $block->renderAmount($minimalPrice, [
                'display_label'     => __('From'),
                'price_id'          => $block->getPriceId('from-'),
                'price_type'        => 'minPrice',
                'include_container' => true
            ]) ?>
        </p>
    <?php endif; ?>
    <?php if ($maximalPrice !== 0) : ?>
        <p class="price-to">
            <?= /** @noEscape */ $block->renderAmount($maximalPrice, [
                'display_label'     => __('To'),
                'price_id'          => $block->getPriceId('to-'),
                'price_type'        => 'maxPrice',
                'include_container' => true
            ]) ?>
        </p>
    <?php endif; ?>
<?php endif; ?>
