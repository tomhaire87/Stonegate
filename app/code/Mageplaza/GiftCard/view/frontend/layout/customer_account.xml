<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" ifconfig="mpgiftcard/general/enable" name="customer-account-navigation-gift-card-link" cacheable="false">
                <arguments>
                    <argument name="path" xsi:type="string">giftcard</argument>
                    <argument name="label" xsi:type="string">My Gift Cards</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
