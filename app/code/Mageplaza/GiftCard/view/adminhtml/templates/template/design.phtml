                    <img class="design-field-edit" data-id="giftcard"
                         src="<?= /** @noEscape */ $block->getViewFileUrl('Mageplaza_GiftCard::css/image/icon_edit.png') ?>"/>
                </div>
            </div>
        </div>
    </fieldset>
