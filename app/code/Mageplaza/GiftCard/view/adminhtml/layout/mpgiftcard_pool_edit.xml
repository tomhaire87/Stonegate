<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="editor"/>
    <body>
        <referenceContainer name="content">
            <block class="Mageplaza\GiftCard\Block\Adminhtml\Pool\Edit" name="giftcard_pool_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Mageplaza\GiftCard\Block\Adminhtml\Pool\Edit\Tabs" name="giftcard_pool_edit_tabs">
                <block class="Mageplaza\GiftCard\Block\Adminhtml\Pool\Edit\Tab\Information" name="mageplaza_giftcard_pool_edit_tab_information"/>
                <block class="Mageplaza\GiftCard\Block\Adminhtml\Pool\Edit\Tab\Generate" name="mageplaza_giftcard_pool_edit_tab_generate">
                    <block class="Mageplaza\GiftCard\Block\Adminhtml\Pool\Edit\Tab\Generate\Form" name="mageplaza_giftcard_pool_edit_tab_generate_form"/>
                    <block class="Mageplaza\GiftCard\Block\Adminhtml\Pool\Edit\Tab\Generate\Grid" name="mageplaza_giftcard_pool_edit_tab_generate_grid"/>
                </block>
            </block>
        </referenceContainer>
        <referenceBlock name="head.components">
            <block class="Magento\Framework\View\Element\Js\Components" name="giftcard_pool_form_page_head_components" template="Mageplaza_GiftCard::pool/js.phtml"/>
        </referenceBlock>
    </body>
</page>
