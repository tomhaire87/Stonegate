$_item = $block->getOrder();
$grand_total = $_item->getData('grand_total');
$subtotal = $_item->getData('subtotal');
$subtotal_with_discount = $_item->getData('subtotal_with_discount');
$discount = $subtotal - $subtotal_with_discount;
