$shipping_note = $shipping_note?$shipping_note:'';
?>

<tr class="subtotal">
    <th colspan="2" scope="row" style="text-align: right">
        <?php echo __('Sub Total');?>
    </th>
    <td  data-th="<?php echo __('Sub Total');?>" align="right">
        <?php /* @escapeNotVerified */ echo $rfqHelper->formatPrice($subtotal, false, $currency_code); ?>
