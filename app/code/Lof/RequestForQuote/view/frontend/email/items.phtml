<?php 
$rfqHelper       = $this->helper('Lof\RequestForQuote\Helper\Data');
$enable_price             = $rfqHelper->getConfig("general/enable_price");
$enable_image             = $rfqHelper->getConfig("email_settings/enable_image");
?>
<?php $_order = $block->getOrder() ?>
<?php if ($_order): ?>
    <?php $_items = $_order->getAllItems(); ?>
    <table class="email-items" style="width:100%" cellspacing="0">
        <thead style="color:FFF;padding:5px;text-align: left;background: #1a7ab2">
            <tr>
                <?php if($enable_image) { ?>
                <th class="item-info">
                    <?= /* @escapeNotVerified */  __('Image'); ?>
                </th>
                <?php } ?>
                <th class="item-info">
                    <?= /* @escapeNotVerified */  __('Name'); ?>
                </th>
                <th class="item-info">
                    <?= /* @escapeNotVerified */  __('SKU'); ?>
                </th>
                <th class="item-qty">
                    <?= /* @escapeNotVerified */  __('Qty'); ?>
                </th>
                <?php if($enable_price) { ?>
                <th class="item-price">
                    <?= /* @escapeNotVerified */  __('Price'); ?>
                </th>
                <?php } ?>
            </tr>
        </thead>
        <?php foreach ($_items as $_item): ?>
            <?php
            if ($_item->getParentItem()) {
                continue;
            }
            ?>
            <tbody>
                <?= $block->getItemHtml($_item) ?>
            </tbody>
        <?php endforeach; ?>
    </table>
    <?php if($enable_price) { ?>
        <table class="order-totals" style="width:100%">
            <tr>
                <td style="width:60%">
                </td>
                <td colspan="2">
                    <table style="width:100%;">
                        <?= $block->getChildHtml('order_totals') ?>
                    </table>
                </td>
            </tr>
        </table>
    <?php } ?>
<?php endif; ?>
